local SuperiorGui = {}

-- üåà –£—Å–æ–≤–µ—Ä—à–µ–Ω—Å—Ç–≤–æ–≤–∞–Ω–Ω–∞—è —Ü–≤–µ—Ç–æ–≤–∞—è —Å—Ö–µ–º–∞ —Å –≥—Ä–∞–¥–∏–µ–Ω—Ç–∞–º–∏
local Colors = {
    Background = Color3.fromRGB(10, 10, 15),
    Secondary = Color3.fromRGB(20, 20, 30),
    Tertiary = Color3.fromRGB(30, 30, 40),
    Accent = Color3.fromRGB(120, 100, 255), -- –§–∏–æ–ª–µ—Ç–æ–≤—ã–π –∞–∫—Ü–µ–Ω—Ç
    AccentLight = Color3.fromRGB(140, 120, 255),
    AccentGradient = {
        Color3.fromRGB(100, 80, 255),
        Color3.fromRGB(140, 100, 255)
    },
    Text = Color3.fromRGB(255, 255, 255),
    TextSecondary = Color3.fromRGB(200, 200, 220),
    Success = Color3.fromRGB(80, 220, 140),
    Danger = Color3.fromRGB(255, 100, 120),
    Warning = Color3.fromRGB(255, 180, 70),
    Border = Color3.fromRGB(50, 50, 70),
    Glow = Color3.fromRGB(140, 120, 255)
}

-- üé® –ü—Ä–æ–¥–≤–∏–Ω—É—Ç—ã–µ —Å—Ç–∏–ª–∏
local Styles = {
    CornerRadius = UDim.new(0, 16),
    MediumCorner = UDim.new(0, 12),
    SmallCorner = UDim.new(0, 8),
    ButtonCorner = UDim.new(0, 25),
    Font = Enum.Font.GothamSSm,
    BoldFont = Enum.Font.GothamBlack,
    MediumFont = Enum.Font.GothamMedium,
    AnimationSpeed = 0.2,
    ShadowSize = 30,
    GlowIntensity = 0.3
}

-- üîß –í—Å–ø–æ–º–æ–≥–∞—Ç–µ–ª—å–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è –¥–ª—è —Å–æ–∑–¥–∞–Ω–∏—è –≥—Ä–∞–¥–∏–µ–Ω—Ç–∞
local function createGradient(parent, colors, rotation)
    local gradient = Instance.new("UIGradient")
    gradient.Color = ColorSequence.new(colors)
    gradient.Rotation = rotation or 45
    gradient.Parent = parent
    return gradient
end

-- üéØ –û—Å–Ω–æ–≤–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è —Å–æ–∑–¥–∞–Ω–∏—è GUI
function SuperiorGui:CreateMainFrame(parent)
    parent = parent or game:GetService("CoreGui")

    -- –ì–ª–∞–≤–Ω—ã–π –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä —Å —ç—Ñ—Ñ–µ–∫—Ç–æ–º —Å—Ç–µ–∫–ª–∞
    local MainFrame = Instance.new("Frame")
    MainFrame.Name = "SuperiorGUI"
    MainFrame.Size = UDim2.new(0, 850, 0, 600)
    MainFrame.Position = UDim2.new(0.5, -425, 0.5, -300)
    MainFrame.BackgroundColor3 = Colors.Background
    MainFrame.BackgroundTransparency = 0.05
    MainFrame.BorderSizePixel = 0
    MainFrame.ClipsDescendants = false
    MainFrame.Parent = parent

    -- –°–ª–æ–∂–Ω–∞—è –º–Ω–æ–≥–æ—Å–ª–æ–π–Ω–∞—è —Ç–µ–Ω—å
    local function createShadowLayer(size, transparency, offset)
        local shadow = Instance.new("ImageLabel")
        shadow.Size = UDim2.new(1, size * 2, 1, size * 2)
        shadow.Position = UDim2.new(0, -size, 0, -size)
        shadow.BackgroundTransparency = 1
        shadow.Image = "rbxassetid://6015897843"
        shadow.ImageColor3 = Color3.new(0, 0, 0)
        shadow.ImageTransparency = transparency
        shadow.ScaleType = Enum.ScaleType.Slice
        shadow.SliceCenter = Rect.new(10, 10, 118, 118)
        shadow.Parent = MainFrame
    end
    
    createShadowLayer(25, 0.8, 0)
    createShadowLayer(15, 0.6, 5)

    -- –°–≥–ª–∞–∂–µ–Ω–Ω—ã–µ —É–≥–ª—ã —Å –≤–Ω—É—Ç—Ä–µ–Ω–Ω–µ–π –æ–±–≤–æ–¥–∫–æ–π
    local MainCorner = Instance.new("UICorner")
    MainCorner.CornerRadius = Styles.CornerRadius
    MainCorner.Parent = MainFrame

    -- –°—Ç–∏–ª—å–Ω–∞—è –æ–±–≤–æ–¥–∫–∞
    local Stroke = Instance.new("UIStroke")
    Stroke.Color = Colors.Border
    Stroke.Thickness = 1.5
    Stroke.Transparency = 0.3
    Stroke.Parent = MainFrame

    -- –í–Ω—É—Ç—Ä–µ–Ω–Ω–∏–π –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä —Å –æ—Ç—Å—Ç—É–ø–∞–º–∏
    local Container = Instance.new("Frame")
    Container.Name = "Container"
    Container.Size = UDim2.new(1, -30, 1, -30)
    Container.Position = UDim2.new(0, 15, 0, 15)
    Container.BackgroundTransparency = 1
    Container.Parent = MainFrame

    -- –ó–∞–≥–æ–ª–æ–≤–æ–∫ GUI —Å –≥—Ä–∞–¥–∏–µ–Ω—Ç–æ–º
    local TitleFrame = Instance.new("Frame")
    TitleFrame.Name = "TitleFrame"
    TitleFrame.Size = UDim2.new(1, 0, 0, 50)
    TitleFrame.BackgroundTransparency = 1
    TitleFrame.Parent = Container

    local Title = Instance.new("TextLabel")
    Title.Name = "Title"
    Title.Size = UDim2.new(0, 300, 1, 0)
    Title.BackgroundTransparency = 1
    Title.Text = "‚ú® SUPERIOR HUB"
    Title.TextColor3 = Colors.Text
    Title.Font = Styles.BoldFont
    Title.TextSize = 28
    Title.TextXAlignment = Enum.TextXAlignment.Left
    Title.Parent = TitleFrame

    -- –ì—Ä–∞–¥–∏–µ–Ω—Ç –¥–ª—è –∑–∞–≥–æ–ª–æ–≤–∫–∞
    local TitleGradient = Instance.new("UIGradient")
    TitleGradient.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0, Colors.AccentGradient[1]),
        ColorSequenceKeypoint.new(1, Colors.AccentGradient[2])
    })
    TitleGradient.Parent = Title

    -- –î–µ–∫–æ—Ä–∞—Ç–∏–≤–Ω–∞—è –ª–∏–Ω–∏—è –ø–æ–¥ –∑–∞–≥–æ–ª–æ–≤–∫–æ–º
    local DecorationLine = Instance.new("Frame")
    DecorationLine.Name = "DecorationLine"
    DecorationLine.Size = UDim2.new(1, 0, 0, 2)
    DecorationLine.Position = UDim2.new(0, 0, 1, -2)
    DecorationLine.BackgroundColor3 = Colors.Accent
    DecorationLine.BorderSizePixel = 0
    DecorationLine.Parent = TitleFrame

    local LineGradient = createGradient(DecorationLine, {
        Color3.fromRGB(120, 100, 255),
        Color3.fromRGB(80, 200, 255),
        Color3.fromRGB(120, 100, 255)
    }, 90)

    -- –û—Å–Ω–æ–≤–Ω–æ–π layout –¥–ª—è –≥–æ—Ä–∏–∑–æ–Ω—Ç–∞–ª—å–Ω–æ–≥–æ —Ä–∞—Å–ø–æ–ª–æ–∂–µ–Ω–∏—è
    local MainLayout = Instance.new("UIListLayout")
    MainLayout.FillDirection = Enum.FillDirection.Horizontal
    MainLayout.HorizontalAlignment = Enum.HorizontalAlignment.Left
    MainLayout.VerticalAlignment = Enum.VerticalAlignment.Top
    MainLayout.Padding = UDim.new(0, 15)
    MainLayout.Parent = Container

    -- –°–æ–∑–¥–∞–µ–º –ø–∞–Ω–µ–ª–∏
    local LeftPanel = self:CreateLeftPanel(Container)
    local RightPanel = self:CreateRightPanel(Container)

    -- –°–æ—Ö—Ä–∞–Ω—è–µ–º —Å—Å—ã–ª–∫–∏
    MainFrame.LeftPanel = LeftPanel
    MainFrame.RightPanel = RightPanel
    MainFrame.Tabs = {}
    MainFrame.CurrentTab = nil

    -- –î–æ–±–∞–≤–ª—è–µ–º —ç—Ñ—Ñ–µ–∫—Ç —Å–≤–µ—á–µ–Ω–∏—è –ø—Ä–∏ –Ω–∞–≤–µ–¥–µ–Ω–∏–∏
    MainFrame.MouseEnter:Connect(function()
        for i, v in pairs(MainFrame:GetChildren()) do
            if v:IsA("ImageLabel") then
                v.ImageTransparency = 0.5
            end
        end
    end)

    MainFrame.MouseLeave:Connect(function()
        for i, v in pairs(MainFrame:GetChildren()) do
            if v:IsA("ImageLabel") then
                v.ImageTransparency = 0.8
            end
        end
    end)

    return MainFrame
end

-- üé® –õ–µ–≤–∞—è –ø–∞–Ω–µ–ª—å (–≤–∫–ª–∞–¥–∫–∏)
function SuperiorGui:CreateLeftPanel(parent)
    local Panel = Instance.new("Frame")
    Panel.Name = "LeftPanel"
    Panel.Size = UDim2.new(0, 220, 1, -60)
    Panel.Position = UDim2.new(0, 0, 0, 60)
    Panel.BackgroundColor3 = Colors.Secondary
    Panel.BackgroundTransparency = 0.1
    Panel.BorderSizePixel = 0
    Panel.Parent = parent

    -- –°—Ç–∏–ª–∏–∑–∞—Ü–∏—è –ø–∞–Ω–µ–ª–∏
    local PanelCorner = Instance.new("UICorner")
    PanelCorner.CornerRadius = Styles.MediumCorner
    PanelCorner.Parent = Panel

    local PanelStroke = Instance.new("UIStroke")
    PanelStroke.Color = Colors.Border
    PanelStroke.Thickness = 1
    PanelStroke.Transparency = 0.5
    PanelStroke.Parent = Panel

    -- –ó–∞–≥–æ–ª–æ–≤–æ–∫ –ø–∞–Ω–µ–ª–∏ —Å –∏–∫–æ–Ω–∫–æ–π
    local Header = Instance.new("TextLabel")
    Header.Name = "Header"
    Header.Size = UDim2.new(1, -20, 0, 45)
    Header.Position = UDim2.new(0, 10, 0, 10)
    Header.BackgroundTransparency = 1
    Header.Text = "üìã –ù–ê–í–ò–ì–ê–¶–ò–Ø"
    Header.TextColor3 = Colors.TextSecondary
    Header.Font = Styles.MediumFont
    Header.TextSize = 14
    Header.TextXAlignment = Enum.TextXAlignment.Left
    Header.Parent = Panel

    -- ScrollingFrame –¥–ª—è –≤–∫–ª–∞–¥–æ–∫
    local TabsFrame = Instance.new("ScrollingFrame")
    TabsFrame.Name = "TabsFrame"
    TabsFrame.Size = UDim2.new(1, -20, 1, -70)
    TabsFrame.Position = UDim2.new(0, 10, 0, 60)
    TabsFrame.BackgroundTransparency = 1
    TabsFrame.BorderSizePixel = 0
    TabsFrame.ScrollBarThickness = 3
    TabsFrame.ScrollBarImageColor3 = Colors.Accent
    TabsFrame.ScrollBarImageTransparency = 0.5
    TabsFrame.CanvasSize = UDim2.new(0, 0, 0, 0)
    TabsFrame.AutomaticCanvasSize = Enum.AutomaticSize.Y
    TabsFrame.Parent = Panel

    -- Layout –¥–ª—è –≤–∫–ª–∞–¥–æ–∫
    local TabsLayout = Instance.new("UIListLayout")
    TabsLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
    TabsLayout.VerticalAlignment = Enum.VerticalAlignment.Top
    TabsLayout.Padding = UDim.new(0, 8)
    TabsLayout.Parent = TabsFrame

    return Panel
end

-- üé® –ü—Ä–∞–≤–∞—è –ø–∞–Ω–µ–ª—å (—Ñ—É–Ω–∫—Ü–∏–∏)
function SuperiorGui:CreateRightPanel(parent)
    local Panel = Instance.new("Frame")
    Panel.Name = "RightPanel"
    Panel.Size = UDim2.new(1, -235, 1, -60)
    Panel.Position = UDim2.new(0, 235, 0, 60)
    Panel.BackgroundColor3 = Colors.Secondary
    Panel.BackgroundTransparency = 0.1
    Panel.BorderSizePixel = 0
    Panel.Parent = parent

    -- –°—Ç–∏–ª–∏–∑–∞—Ü–∏—è
    local PanelCorner = Instance.new("UICorner")
    PanelCorner.CornerRadius = Styles.MediumCorner
    PanelCorner.Parent = Panel

    local PanelStroke = Instance.new("UIStroke")
    PanelStroke.Color = Colors.Border
    PanelStroke.Thickness = 1
    PanelStroke.Transparency = 0.5
    PanelStroke.Parent = Panel

    -- –ó–∞–≥–æ–ª–æ–≤–æ–∫ —Å —Å—á–µ—Ç—á–∏–∫–æ–º —Ñ—É–Ω–∫—Ü–∏–π
    local Header = Instance.new("TextLabel")
    Header.Name = "Header"
    Header.Size = UDim2.new(1, -20, 0, 45)
    Header.Position = UDim2.new(0, 10, 0, 10)
    Header.BackgroundTransparency = 1
    Header.Text = "‚ö° –§–£–ù–ö–¶–ò–ò"
    Header.TextColor3 = Colors.TextSecondary
    Header.Font = Styles.MediumFont
    Header.TextSize = 14
    Header.TextXAlignment = Enum.TextXAlignment.Left
    Header.Parent = Panel

    -- –ö–æ–Ω—Ç–µ–π–Ω–µ—Ä –¥–ª—è —Ñ—É–Ω–∫—Ü–∏–π
    local FunctionsContainer = Instance.new("Frame")
    FunctionsContainer.Name = "FunctionsContainer"
    FunctionsContainer.Size = UDim2.new(1, -20, 1, -70)
    FunctionsContainer.Position = UDim2.new(0, 10, 0, 60)
    FunctionsContainer.BackgroundTransparency = 1
    FunctionsContainer.Parent = Panel

    Panel.FunctionsContainer = FunctionsContainer

    return Panel
end

-- üìå –°–æ–∑–¥–∞–Ω–∏–µ –≤–∫–ª–∞–¥–∫–∏
function SuperiorGui:CreateTab(leftPanel, tabName, icon)
    icon = icon or "üìå"
    
    local TabsFrame = leftPanel:FindFirstChild("TabsFrame")
    if not TabsFrame then return nil end

    -- –°–æ–∑–¥–∞–µ–º –∫–Ω–æ–ø–∫—É –≤–∫–ª–∞–¥–∫–∏
    local TabButton = Instance.new("TextButton")
    TabButton.Name = "Tab_" .. tabName
    TabButton.Size = UDim2.new(1, -10, 0, 45)
    TabButton.BackgroundColor3 = Colors.Tertiary
    TabButton.BackgroundTransparency = 0.2
    TabButton.BorderSizePixel = 0
    TabButton.Text = ""
    TabButton.AutoButtonColor = false
    TabButton.Parent = TabsFrame

    -- –°—Ç–∏–ª–∏–∑–∞—Ü–∏—è –∫–Ω–æ–ø–∫–∏
    local TabCorner = Instance.new("UICorner")
    TabCorner.CornerRadius = Styles.SmallCorner
    TabCorner.Parent = TabButton

    -- –ò–∫–æ–Ω–∫–∞
    local Icon = Instance.new("TextLabel")
    Icon.Name = "Icon"
    Icon.Size = UDim2.new(0, 35, 1, 0)
    Icon.BackgroundTransparency = 1
    Icon.Text = icon
    Icon.TextColor3 = Colors.Accent
    Icon.Font = Enum.Font.Gotham
    Icon.TextSize = 20
    Icon.Parent = TabButton

    -- –¢–µ–∫—Å—Ç –≤–∫–ª–∞–¥–∫–∏
    local Label = Instance.new("TextLabel")
    Label.Name = "Label"
    Label.Size = UDim2.new(1, -45, 1, 0)
    Label.Position = UDim2.new(0, 40, 0, 0)
    Label.BackgroundTransparency = 1
    Label.Text = tabName
    Label.TextColor3 = Colors.TextSecondary
    Label.Font = Styles.Font
    Label.TextSize = 14
    Label.TextXAlignment = Enum.TextXAlignment.Left
    Label.Parent = TabButton

    -- –≠—Ñ—Ñ–µ–∫—Ç –ø—Ä–∏ –Ω–∞–≤–µ–¥–µ–Ω–∏–∏
    TabButton.MouseEnter:Connect(function()
        if TabButton.BackgroundColor3 ~= Colors.Accent then
            TabButton.BackgroundColor3 = Color3.fromRGB(40, 40, 55)
        end
    end)

    TabButton.MouseLeave:Connect(function()
        if TabButton.BackgroundColor3 ~= Colors.Accent then
            TabButton.BackgroundColor3 = Colors.Tertiary
        end
    end)

    -- –ö–æ–Ω—Ç–µ–π–Ω–µ—Ä —Ñ—É–Ω–∫—Ü–∏–π
    local FunctionsContainer = Instance.new("ScrollingFrame")
    FunctionsContainer.Name = "Functions_" .. tabName
    FunctionsContainer.Size = UDim2.new(1, 0, 1, 0)
    FunctionsContainer.BackgroundTransparency = 1
    FunctionsContainer.BorderSizePixel = 0
    FunctionsContainer.ScrollBarThickness = 3
    FunctionsContainer.ScrollBarImageColor3 = Colors.Accent
    FunctionsContainer.ScrollBarImageTransparency = 0.5
    FunctionsContainer.CanvasSize = UDim2.new(0, 0, 0, 0)
    FunctionsContainer.AutomaticCanvasSize = Enum.AutomaticSize.Y
    FunctionsContainer.Visible = false
    FunctionsContainer.Parent = leftPanel.Parent:FindFirstChild("RightPanel"):FindFirstChild("FunctionsContainer")

    -- Layout –¥–ª—è —Ñ—É–Ω–∫—Ü–∏–π
    local FunctionsLayout = Instance.new("UIListLayout")
    FunctionsLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
    FunctionsLayout.VerticalAlignment = Enum.VerticalAlignment.Top
    FunctionsLayout.Padding = UDim.new(0, 10)
    FunctionsLayout.Parent = FunctionsContainer

    local FunctionsPadding = Instance.new("UIPadding")
    FunctionsPadding.PaddingTop = UDim.new(0, 10)
    FunctionsPadding.PaddingBottom = UDim.new(0, 10)
    FunctionsPadding.Parent = FunctionsContainer

    -- –û–±—Ä–∞–±–æ—Ç–∫–∞ –∫–ª–∏–∫–∞
    TabButton.MouseButton1Click:Connect(function()
        -- –ê–Ω–∏–º–∞—Ü–∏—è —Å–∫—Ä—ã—Ç–∏—è –≤—Å–µ—Ö —Ñ—É–Ω–∫—Ü–∏–π
        local rightPanel = leftPanel.Parent:FindFirstChild("RightPanel")
        if rightPanel then
            local container = rightPanel:FindFirstChild("FunctionsContainer")
            if container then
                for _, child in pairs(container:GetChildren()) do
                    if child:IsA("ScrollingFrame") then
                        child.Visible = false
                    end
                end
            end
        end

        -- –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –Ω–æ–≤—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏
        FunctionsContainer.Visible = true

        -- –ê–Ω–∏–º–∞—Ü–∏—è –∫–Ω–æ–ø–æ–∫
        for _, btn in pairs(TabsFrame:GetChildren()) do
            if btn:IsA("TextButton") then
                btn.BackgroundColor3 = Colors.Tertiary
                btn:FindFirstChild("Label").TextColor3 = Colors.TextSecondary
            end
        end
        
        TabButton.BackgroundColor3 = Colors.Accent
        Label.TextColor3 = Colors.Text
        Icon.TextColor3 = Colors.Text
    end)

    return FunctionsContainer
end

-- üîò –°–æ–∑–¥–∞–Ω–∏–µ —Ç—É–º–±–ª–µ—Ä–∞
function SuperiorGui:CreateToggle(parent, text, defaultState, callback)
    local FunctionFrame = Instance.new("Frame")
    FunctionFrame.Name = "ToggleFunction"
    FunctionFrame.Size = UDim2.new(1, -10, 0, 60)
    FunctionFrame.BackgroundColor3 = Colors.Tertiary
    FunctionFrame.BackgroundTransparency = 0.2
    FunctionFrame.BorderSizePixel = 0
    FunctionFrame.Parent = parent

    -- –°—Ç–∏–ª–∏–∑–∞—Ü–∏—è
    local FrameCorner = Instance.new("UICorner")
    FrameCorner.CornerRadius = Styles.SmallCorner
    FrameCorner.Parent = FunctionFrame

    local FrameStroke = Instance.new("UIStroke")
    FrameStroke.Color = Colors.Border
    FrameStroke.Thickness = 1
    FrameStroke.Transparency = 0.7
    FrameStroke.Parent = FunctionFrame

    -- –ò–∫–æ–Ω–∫–∞ —Ñ—É–Ω–∫—Ü–∏–∏
    local Icon = Instance.new("TextLabel")
    Icon.Name = "Icon"
    Icon.Size = UDim2.new(0, 40, 1, 0)
    Icon.BackgroundTransparency = 1
    Icon.Text = "‚ö°"
    Icon.TextColor3 = Colors.Accent
    Icon.Font = Enum.Font.Gotham
    Icon.TextSize = 18
    Icon.Parent = FunctionFrame

    -- –¢–µ–∫—Å—Ç
    local TextLabel = Instance.new("TextLabel")
    TextLabel.Name = "Text"
    TextLabel.Size = UDim2.new(1, -110, 1, 0)
    TextLabel.Position = UDim2.new(0, 45, 0, 0)
    TextLabel.BackgroundTransparency = 1
    TextLabel.Text = text
    TextLabel.TextColor3 = Colors.Text
    TextLabel.Font = Styles.Font
    TextLabel.TextSize = 14
    TextLabel.TextXAlignment = Enum.TextXAlignment.Left
    TextLabel.TextWrapped = true
    TextLabel.Parent = FunctionFrame

    -- –°–æ–≤—Ä–µ–º–µ–Ω–Ω—ã–π —Ç—É–º–±–ª–µ—Ä
    local ToggleButton = Instance.new("TextButton")
    ToggleButton.Name = "Toggle"
    ToggleButton.Size = UDim2.new(0, 55, 0, 28)
    ToggleButton.Position = UDim2.new(1, -70, 0.5, -14)
    ToggleButton.BackgroundColor3 = defaultState and Colors.Success or Colors.Danger
    ToggleButton.BackgroundTransparency = 0.1
    ToggleButton.BorderSizePixel = 0
    ToggleButton.Text = ""
    ToggleButton.AutoButtonColor = false
    ToggleButton.Parent = FunctionFrame

    local ToggleCorner = Instance.new("UICorner")
    ToggleCorner.CornerRadius = UDim.new(0, 14)
    ToggleCorner.Parent = ToggleButton

    -- –ö—Ä—É–∂–æ–∫ —Ç—É–º–±–ª–µ—Ä–∞
    local ToggleKnob = Instance.new("Frame")
    ToggleKnob.Name = "Knob"
    ToggleKnob.Size = UDim2.new(0, 24, 0, 24)
    ToggleKnob.Position = UDim2.new(defaultState and 1 or 0, defaultState and -27 or 3, 0.5, -12)
    ToggleKnob.BackgroundColor3 = Colors.Text
    ToggleKnob.BorderSizePixel = 0
    ToggleKnob.Parent = ToggleButton

    local KnobCorner = Instance.new("UICorner")
    KnobCorner.CornerRadius = UDim.new(1, 0)
    KnobCorner.Parent = ToggleKnob

    local state = defaultState or false

    ToggleButton.MouseButton1Click:Connect(function()
        state = not state
        
        -- –ê–Ω–∏–º–∞—Ü–∏—è
        ToggleButton.BackgroundColor3 = state and Colors.Success or Colors.Danger
        ToggleKnob:TweenPosition(
            UDim2.new(state and 1 or 0, state and -27 or 3, 0.5, -12),
            Enum.EasingDirection.Out,
            Enum.EasingStyle.Quad,
            0.15,
            true
        )

        if callback then
            callback(state)
        end
    end)

    return FunctionFrame
end

-- üîò –°–æ–∑–¥–∞–Ω–∏–µ –∫–Ω–æ–ø–∫–∏
function SuperiorGui:CreateButton(parent, text, icon, callback)
    icon = icon or "üîò"
    
    local FunctionFrame = Instance.new("Frame")
    FunctionFrame.Name = "ButtonFunction"
    FunctionFrame.Size = UDim2.new(1, -10, 0, 60)
    FunctionFrame.BackgroundColor3 = Colors.Tertiary
    FunctionFrame.BackgroundTransparency = 0.2
    FunctionFrame.BorderSizePixel = 0
    FunctionFrame.Parent = parent

    -- –°—Ç–∏–ª–∏–∑–∞—Ü–∏—è
    local FrameCorner = Instance.new("UICorner")
    FrameCorner.CornerRadius = Styles.SmallCorner
    FrameCorner.Parent = FunctionFrame

    local FrameStroke = Instance.new("UIStroke")
    FrameStroke.Color = Colors.Border
    FrameStroke.Thickness = 1
    FrameStroke.Transparency = 0.7
    FrameStroke.Parent = FunctionFrame

    -- –ò–∫–æ–Ω–∫–∞
    local Icon = Instance.new("TextLabel")
    Icon.Name = "Icon"
    Icon.Size = UDim2.new(0, 40, 1, 0)
    Icon.BackgroundTransparency = 1
    Icon.Text = icon
    Icon.TextColor3 = Colors.Accent
    Icon.Font = Enum.Font.Gotham
    Icon.TextSize = 18
    Icon.Parent = FunctionFrame

    -- –¢–µ–∫—Å—Ç
    local TextLabel = Instance.new("TextLabel")
    TextLabel.Name = "Text"
    TextLabel.Size = UDim2.new(1, -110, 1, 0)
    TextLabel.Position = UDim2.new(0, 45, 0, 0)
    TextLabel.BackgroundTransparency = 1
    TextLabel.Text = text
    TextLabel.TextColor3 = Colors.Text
    TextLabel.Font = Styles.Font
    TextLabel.TextSize = 14
    TextLabel.TextXAlignment = Enum.TextXAlignment.Left
    TextLabel.TextWrapped = true
    TextLabel.Parent = FunctionFrame

    -- –ö–Ω–æ–ø–∫–∞ –¥–µ–π—Å—Ç–≤–∏—è
    local ActionButton = Instance.new("TextButton")
    ActionButton.Name = "Action"
    ActionButton.Size = UDim2.new(0, 70, 0, 35)
    ActionButton.Position = UDim2.new(1, -85, 0.5, -17.5)
    ActionButton.BackgroundColor3 = Colors.Accent
    ActionButton.BackgroundTransparency = 0.1
    ActionButton.BorderSizePixel = 0
    ActionButton.Text = "‚ñ∂"
    ActionButton.TextColor3 = Colors.Text
    ActionButton.Font = Styles.MediumFont
    ActionButton.TextSize = 16
    ActionButton.AutoButtonColor = false
    ActionButton.Parent = FunctionFrame

    local ButtonCorner = Instance.new("UICorner")
    ButtonCorner.CornerRadius = Styles.ButtonCorner
    ButtonCorner.Parent = ActionButton

    -- –≠—Ñ—Ñ–µ–∫—Ç—ã –Ω–∞–≤–µ–¥–µ–Ω–∏—è
    ActionButton.MouseEnter:Connect(function()
        ActionButton.BackgroundColor3 = Colors.AccentLight
    end)

    ActionButton.MouseLeave:Connect(function()
        ActionButton.BackgroundColor3 = Colors.Accent
    end)

    ActionButton.MouseButton1Click:Connect(function()
        -- –≠—Ñ—Ñ–µ–∫—Ç –Ω–∞–∂–∞—Ç–∏—è
        ActionButton.TextSize = 14
        wait(0.05)
        ActionButton.TextSize = 16
        
        if callback then
            callback()
        end
    end)

    return FunctionFrame
end

-- üìä –°–æ–∑–¥–∞–Ω–∏–µ —Å–ª–∞–π–¥–µ—Ä–∞
function SuperiorGui:CreateSlider(parent, text, min, max, defaultValue, callback)
    local FunctionFrame = Instance.new("Frame")
    FunctionFrame.Name = "SliderFunction"
    FunctionFrame.Size = UDim2.new(1, -10, 0, 70)
    FunctionFrame.BackgroundColor3 = Colors.Tertiary
    FunctionFrame.BackgroundTransparency = 0.2
    FunctionFrame.BorderSizePixel = 0
    FunctionFrame.Parent = parent

    -- –°—Ç–∏–ª–∏–∑–∞—Ü–∏—è
    local FrameCorner = Instance.new("UICorner")
    FrameCorner.CornerRadius = Styles.SmallCorner
    FrameCorner.Parent = FunctionFrame

    -- –ó–∞–≥–æ–ª–æ–≤–æ–∫
    local TextLabel = Instance.new("TextLabel")
    TextLabel.Name = "Text"
    TextLabel.Size = UDim2.new(1, -20, 0, 30)
    TextLabel.Position = UDim2.new(0, 10, 0, 5)
    TextLabel.BackgroundTransparency = 1
    TextLabel.Text = text
    TextLabel.TextColor3 = Colors.Text
    TextLabel.Font = Styles.Font
    TextLabel.TextSize = 14
    TextLabel.TextXAlignment = Enum.TextXAlignment.Left
    TextLabel.Parent = FunctionFrame

    -- –ó–Ω–∞—á–µ–Ω–∏–µ
    local ValueLabel = Instance.new("TextLabel")
    ValueLabel.Name = "Value"
    ValueLabel.Size = UDim2.new(0, 50, 0, 30)
    ValueLabel.Position = UDim2.new(1, -60, 0, 5)
    ValueLabel.BackgroundTransparency = 1
    ValueLabel.Text = tostring(defaultValue or min)
    ValueLabel.TextColor3 = Colors.Accent
    ValueLabel.Font = Styles.BoldFont
    ValueLabel.TextSize = 16
    ValueLabel.TextXAlignment = Enum.TextXAlignment.Right
    ValueLabel.Parent = FunctionFrame

    -- –ü–æ–ª–∑—É–Ω–æ–∫
    local Slider = Instance.new("Frame")
    Slider.Name = "Slider"
    Slider.Size = UDim2.new(1, -40, 0, 4)
    Slider.Position = UDim2.new(0, 20, 0, 45)
    Slider.BackgroundColor3 = Colors.Border
    Slider.BorderSizePixel = 0
    Slider.Parent = FunctionFrame

    local SliderCorner = Instance.new("UICorner")
    SliderCorner.CornerRadius = UDim.new(1, 0)
    SliderCorner.Parent = Slider

    -- –ó–∞–ø–æ–ª–Ω–µ–Ω–∏–µ
    local Fill = Instance.new("Frame")
    Fill.Name = "Fill"
    Fill.Size = UDim2.new((defaultValue - min) / (max - min), 0, 1, 0)
    Fill.BackgroundColor3 = Colors.Accent
    Fill.BorderSizePixel = 0
    Fill.Parent = Slider

    local FillCorner = Instance.new("UICorner")
    FillCorner.CornerRadius = UDim.new(1, 0)
    FillCorner.Parent = Fill

    -- –ö–Ω–æ–ø–∫–∞ –ø–æ–ª–∑—É–Ω–∫–∞
    local Knob = Instance.new("TextButton")
    Knob.Name = "Knob"
    Knob.Size = UDim2.new(0, 20, 0, 20)
    Knob.Position = UDim2.new((defaultValue - min) / (max - min), -10, 0.5, -10)
    Knob.BackgroundColor3 = Colors.Text
    Knob.BorderSizePixel = 0
    Knob.Text = ""
    Knob.Parent = Slider

    local KnobCorner = Instance.new("UICorner")
    KnobCorner.CornerRadius = UDim.new(1, 0)
    KnobCorner.Parent = Knob

    local KnobStroke = Instance.new("UIStroke")
    KnobStroke.Color = Colors.Accent
    KnobStroke.Thickness = 2
    KnobStroke.Parent = Knob

    local dragging = false
    local value = defaultValue or min

    Knob.MouseButton1Down:Connect(function()
        dragging = true
    end)

    game:GetService("UserInputService").InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = false
        end
    end)

    Knob.MouseButton1Up:Connect(function()
        dragging = false
    end)

    game:GetService("RunService").RenderStepped:Connect(function()
        if dragging then
            local mousePos = game:GetService("UserInputService"):GetMouseLocation()
            local sliderPos = Slider.AbsolutePosition
            local sliderSize = Slider.AbsoluteSize.X
            local relativePos = math.clamp(mousePos.X - sliderPos.X, 0, sliderSize)
            local newValue = min + (relativePos / sliderSize) * (max - min)
            newValue = math.floor(newValue * 100) / 100
            
            if newValue ~= value then
                value = newValue
                Fill.Size = UDim2.new(relativePos / sliderSize, 0, 1, 0)
                Knob.Position = UDim2.new(relativePos / sliderSize, -10, 0.5, -10)
                ValueLabel.Text = tostring(value)
                
                if callback then
                    callback(value)
                end
            end
        end
    end)

    return FunctionFrame
end

-- üìù –°–æ–∑–¥–∞–Ω–∏–µ –ø–æ–ª—è –≤–≤–æ–¥–∞
function SuperiorGui:CreateInput(parent, text, placeholder, callback)
    local FunctionFrame = Instance.new("Frame")
    FunctionFrame.Name = "InputFunction"
    FunctionFrame.Size = UDim2.new(1, -10, 0, 70)
    FunctionFrame.BackgroundColor3 = Colors.Tertiary
    FunctionFrame.BackgroundTransparency = 0.2
    FunctionFrame.BorderSizePixel = 0
    FunctionFrame.Parent = parent

    -- –°—Ç–∏–ª–∏–∑–∞—Ü–∏—è
    local FrameCorner = Instance.new("UICorner")
    FrameCorner.CornerRadius = Styles.SmallCorner
    FrameCorner.Parent = FunctionFrame

    -- –ó–∞–≥–æ–ª–æ–≤–æ–∫
    local TextLabel = Instance.new("TextLabel")
    TextLabel.Name = "Text"
    TextLabel.Size = UDim2.new(1, -20, 0, 30)
    TextLabel.Position = UDim2.new(0, 10, 0, 5)
    TextLabel.BackgroundTransparency = 1
    TextLabel.Text = text
    TextLabel.TextColor3 = Colors.Text
    TextLabel.Font = Styles.Font
    TextLabel.TextSize = 14
    TextLabel.TextXAlignment = Enum.TextXAlignment.Left
    TextLabel.Parent = FunctionFrame

    -- –ü–æ–ª–µ –≤–≤–æ–¥–∞
    local InputBox = Instance.new("TextBox")
    InputBox.Name = "Input"
    InputBox.Size = UDim2.new(1, -30, 0, 35)
    InputBox.Position = UDim2.new(0, 15, 0, 35)
    InputBox.BackgroundColor3 = Colors.Background
    InputBox.BackgroundTransparency = 0.2
    InputBox.BorderSizePixel = 0
    InputBox.Text = ""
    InputBox.PlaceholderText = placeholder
    InputBox.PlaceholderColor3 = Colors.TextSecondary
    InputBox.TextColor3 = Colors.Text
    InputBox.Font = Styles.Font
    InputBox.TextSize = 14
    InputBox.ClearTextOnFocus = false
    InputBox.Parent = FunctionFrame

    local InputCorner = Instance.new("UICorner")
    InputCorner.CornerRadius = Styles.SmallCorner
    InputCorner.Parent = InputBox

    InputBox.FocusLost:Connect(function(enterPressed)
        if enterPressed and callback then
            callback(InputBox.Text)
        end
    end)

    return FunctionFrame
end

return SuperiorGui
