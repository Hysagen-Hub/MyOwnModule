--[[
    –ú–æ–¥—É–ª—å –¥–ª—è —Å–æ–∑–¥–∞–Ω–∏—è –∫—Ä–∞—Å–∏–≤–æ–≥–æ GUI —Å –≤–∫–ª–∞–¥–∫–∞–º–∏ –∏ —Ñ—É–Ω–∫—Ü–∏—è–º–∏
    –ê–≤—Ç–æ—Ä: Assistant
    –í–µ—Ä—Å–∏—è: 2.1 (–ò—Å–ø—Ä–∞–≤–ª–µ–Ω–Ω–∞—è)
]]

local GuiModule = {}

-- –°–æ–≤—Ä–µ–º–µ–Ω–Ω–∞—è —Ü–≤–µ—Ç–æ–≤–∞—è —Å—Ö–µ–º–∞
local Colors = {
    Background = Color3.fromRGB(18, 18, 22),
    Secondary = Color3.fromRGB(28, 28, 35),
    Tertiary = Color3.fromRGB(38, 38, 45),
    Accent = Color3.fromRGB(100, 120, 255),
    AccentLight = Color3.fromRGB(120, 140, 255),
    Text = Color3.fromRGB(255, 255, 255),
    TextSecondary = Color3.fromRGB(180, 180, 190),
    Success = Color3.fromRGB(70, 200, 120),
    Danger = Color3.fromRGB(255, 100, 100),
    Border = Color3.fromRGB(45, 45, 55)
}

-- –ù–∞—Å—Ç—Ä–æ–π–∫–∏ —Å—Ç–∏–ª–µ–π
local Styles = {
    CornerRadius = UDim.new(0, 8),
    SmallCorner = UDim.new(0, 4),
    Padding = 10,
    ButtonHeight = 35,
    Font = Enum.Font.GothamSemibold,
    SmallFont = Enum.Font.Gotham
}

-- –û—Å–Ω–æ–≤–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è —Å–æ–∑–¥–∞–Ω–∏—è GUI
function GuiModule:CreateMainFrame(parent)
    parent = parent or game:GetService("CoreGui")
    
    -- –û–°–ù–û–í–ù–û–ô –ö–û–ù–¢–ï–ô–ù–ï–†
    local MainFrame = Instance.new("Frame")
    MainFrame.Name = "MainGUI"
    MainFrame.Size = UDim2.new(0, 700, 0, 500)
    MainFrame.Position = UDim2.new(0.5, -350, 0.5, -250)
    MainFrame.BackgroundColor3 = Colors.Background
    MainFrame.BorderSizePixel = 0
    MainFrame.Parent = parent
    
    -- –°–≥–ª–∞–∂–µ–Ω–Ω—ã–µ —É–≥–ª—ã
    local MainCorner = Instance.new("UICorner")
    MainCorner.CornerRadius = UDim.new(0, 12)
    MainCorner.Parent = MainFrame
    
    -- –¢–µ–Ω—å
    local Shadow = Instance.new("ImageLabel")
    Shadow.Name = "Shadow"
    Shadow.Size = UDim2.new(1, 40, 1, 40)
    Shadow.Position = UDim2.new(0, -20, 0, -20)
    Shadow.BackgroundTransparency = 1
    Shadow.Image = "rbxassetid://6015897843"
    Shadow.ImageColor3 = Color3.new(0, 0, 0)
    Shadow.ImageTransparency = 0.7
    Shadow.ScaleType = Enum.ScaleType.Slice
    Shadow.SliceCenter = Rect.new(10, 10, 118, 118)
    Shadow.Parent = MainFrame
    
    -- –í–Ω—É—Ç—Ä–µ–Ω–Ω–∏–π –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä
    local Container = Instance.new("Frame")
    Container.Name = "Container"
    Container.Size = UDim2.new(1, -20, 1, -20)
    Container.Position = UDim2.new(0, 10, 0, 10)
    Container.BackgroundTransparency = 1
    Container.Parent = MainFrame
    
    -- –°–æ–∑–¥–∞–µ–º Layout –¥–ª—è –≥–æ—Ä–∏–∑–æ–Ω—Ç–∞–ª—å–Ω–æ–≥–æ —Ä–∞—Å–ø–æ–ª–æ–∂–µ–Ω–∏—è
    local MainLayout = Instance.new("UIListLayout")
    MainLayout.FillDirection = Enum.FillDirection.Horizontal
    MainLayout.HorizontalAlignment = Enum.HorizontalAlignment.Left
    MainLayout.VerticalAlignment = Enum.VerticalAlignment.Top
    MainLayout.Padding = UDim.new(0, 10)
    MainLayout.Parent = Container
    
    -- –õ–ï–í–ê–Ø –ü–ê–ù–ï–õ–¨ (–í–∫–ª–∞–¥–∫–∏)
    local LeftPanel = self:CreateLeftPanel(Container)
    
    -- –ü–†–ê–í–ê–Ø –ü–ê–ù–ï–õ–¨ (–§—É–Ω–∫—Ü–∏–∏)
    local RightPanel = self:CreateRightPanel(Container)
    
    -- –°–æ—Ö—Ä–∞–Ω—è–µ–º —Å—Å—ã–ª–∫–∏
    MainFrame.LeftPanel = LeftPanel
    MainFrame.RightPanel = RightPanel
    MainFrame.Tabs = {}
    MainFrame.CurrentTab = nil
    
    return MainFrame
end

-- –°–æ–∑–¥–∞–Ω–∏–µ –ª–µ–≤–æ–π –ø–∞–Ω–µ–ª–∏ —Å –≤–∫–ª–∞–¥–∫–∞–º–∏
function GuiModule:CreateLeftPanel(parent)
    local Panel = Instance.new("Frame")
    Panel.Name = "LeftPanel"
    Panel.Size = UDim2.new(0, 200, 1, 0)
    Panel.BackgroundColor3 = Colors.Secondary
    Panel.BorderSizePixel = 0
    Panel.Parent = parent
    
    -- –°–∫—Ä—É–≥–ª–µ–Ω–∏–µ
    local PanelCorner = Instance.new("UICorner")
    PanelCorner.CornerRadius = Styles.CornerRadius
    PanelCorner.Parent = Panel
    
    -- –ó–∞–≥–æ–ª–æ–≤–æ–∫
    local Header = Instance.new("TextLabel")
    Header.Name = "Header"
    Header.Size = UDim2.new(1, 0, 0, 45)
    Header.BackgroundColor3 = Colors.Tertiary
    Header.BorderSizePixel = 0
    Header.Text = "üìÅ –í–ö–õ–ê–î–ö–ò"
    Header.TextColor3 = Colors.Text
    Header.Font = Styles.Font
    Header.TextSize = 16
    Header.Parent = Panel
    
    local HeaderCorner = Instance.new("UICorner")
    HeaderCorner.CornerRadius = UDim.new(0, 8)
    HeaderCorner.Parent = Header
    
    -- ScrollingFrame –¥–ª—è –≤–∫–ª–∞–¥–æ–∫
    local TabsFrame = Instance.new("ScrollingFrame")
    TabsFrame.Name = "TabsFrame"
    TabsFrame.Size = UDim2.new(1, -10, 1, -55)
    TabsFrame.Position = UDim2.new(0, 5, 0, 50)
    TabsFrame.BackgroundTransparency = 1
    TabsFrame.BorderSizePixel = 0
    TabsFrame.ScrollBarThickness = 4
    TabsFrame.ScrollBarImageColor3 = Colors.Accent
    TabsFrame.CanvasSize = UDim2.new(0, 0, 0, 0)
    TabsFrame.AutomaticCanvasSize = Enum.AutomaticSize.Y
    TabsFrame.Parent = Panel
    
    -- Layout –¥–ª—è –∫–Ω–æ–ø–æ–∫ –≤–∫–ª–∞–¥–æ–∫
    local TabsLayout = Instance.new("UIListLayout")
    TabsLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
    TabsLayout.VerticalAlignment = Enum.VerticalAlignment.Top
    TabsLayout.Padding = UDim.new(0, 8)
    TabsLayout.Parent = TabsFrame
    
    -- Padding
    local TabsPadding = Instance.new("UIPadding")
    TabsPadding.PaddingTop = UDim.new(0, 5)
    TabsPadding.PaddingBottom = UDim.new(0, 5)
    TabsPadding.Parent = TabsFrame
    
    -- –¢–∞–±–ª–∏—Ü–∞ –¥–ª—è —Ö—Ä–∞–Ω–µ–Ω–∏—è —Ñ—É–Ω–∫—Ü–∏–π –ø–∞–Ω–µ–ª–∏
    Panel.FunctionsContainer = nil -- –ë—É–¥–µ—Ç —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–æ –ø–æ–∑–∂–µ
    
    return Panel
end

-- –°–æ–∑–¥–∞–Ω–∏–µ –ø—Ä–∞–≤–æ–π –ø–∞–Ω–µ–ª–∏ —Å —Ñ—É–Ω–∫—Ü–∏—è–º–∏
function GuiModule:CreateRightPanel(parent)
    local Panel = Instance.new("Frame")
    Panel.Name = "RightPanel"
    Panel.Size = UDim2.new(1, -210, 1, 0)
    Panel.BackgroundColor3 = Colors.Secondary
    Panel.BorderSizePixel = 0
    Panel.Parent = parent
    
    -- –°–∫—Ä—É–≥–ª–µ–Ω–∏–µ
    local PanelCorner = Instance.new("UICorner")
    PanelCorner.CornerRadius = Styles.CornerRadius
    PanelCorner.Parent = Panel
    
    -- –ó–∞–≥–æ–ª–æ–≤–æ–∫
    local Header = Instance.new("TextLabel")
    Header.Name = "Header"
    Header.Size = UDim2.new(1, 0, 0, 45)
    Header.BackgroundColor3 = Colors.Tertiary
    Header.BorderSizePixel = 0
    Header.Text = "‚öôÔ∏è –§–£–ù–ö–¶–ò–ò"
    Header.TextColor3 = Colors.Text
    Header.Font = Styles.Font
    Header.TextSize = 16
    Header.Parent = Panel
    
    local HeaderCorner = Instance.new("UICorner")
    HeaderCorner.CornerRadius = UDim.new(0, 8)
    HeaderCorner.Parent = Header
    
    -- –ö–æ–Ω—Ç–µ–π–Ω–µ—Ä –¥–ª—è —Ñ—É–Ω–∫—Ü–∏–π
    local FunctionsContainer = Instance.new("Frame")
    FunctionsContainer.Name = "FunctionsContainer"
    FunctionsContainer.Size = UDim2.new(1, -10, 1, -55)
    FunctionsContainer.Position = UDim2.new(0, 5, 0, 50)
    FunctionsContainer.BackgroundTransparency = 1
    FunctionsContainer.Parent = Panel
    
    Panel.FunctionsContainer = FunctionsContainer
    
    return Panel
end

-- –§—É–Ω–∫—Ü–∏—è —Å–æ–∑–¥–∞–Ω–∏—è –Ω–æ–≤–æ–π –≤–∫–ª–∞–¥–∫–∏ (—Ç–µ–ø–µ—Ä—å –æ—Ç–¥–µ–ª—å–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è –º–æ–¥—É–ª—è)
function GuiModule:CreateTab(leftPanel, tabName, rightPanelFunctionsContainer)
    local TabsFrame = leftPanel.TabsFrame
    
    local TabButton = Instance.new("TextButton")
    TabButton.Name = "Tab_" .. tabName
    TabButton.Size = UDim2.new(1, -10, 0, 40)
    TabButton.BackgroundColor3 = Colors.Tertiary
    TabButton.BorderSizePixel = 0
    TabButton.Text = "  " .. tabName
    TabButton.TextColor3 = Colors.TextSecondary
    TabButton.Font = Styles.Font
    TabButton.TextSize = 14
    TabButton.TextXAlignment = Enum.TextXAlignment.Left
    TabButton.Parent = TabsFrame
    
    -- –°–∫—Ä—É–≥–ª–µ–Ω–∏–µ
    local TabCorner = Instance.new("UICorner")
    TabCorner.CornerRadius = Styles.SmallCorner
    TabCorner.Parent = TabButton
    
    -- –ò–∫–æ–Ω–∫–∞
    local Icon = Instance.new("TextLabel")
    Icon.Name = "Icon"
    Icon.Size = UDim2.new(0, 30, 1, 0)
    Icon.BackgroundTransparency = 1
    Icon.Text = "üìå"
    Icon.TextColor3 = Colors.Accent
    Icon.Font = Enum.Font.Gotham
    Icon.TextSize = 16
    Icon.Parent = TabButton
    
    -- –ö–æ–Ω—Ç–µ–π–Ω–µ—Ä –¥–ª—è —Ñ—É–Ω–∫—Ü–∏–π —ç—Ç–æ–π –≤–∫–ª–∞–¥–∫–∏
    local FunctionsContainer = Instance.new("ScrollingFrame")
    FunctionsContainer.Name = "Functions_" .. tabName
    FunctionsContainer.Size = UDim2.new(1, 0, 1, 0)
    FunctionsContainer.BackgroundTransparency = 1
    FunctionsContainer.BorderSizePixel = 0
    FunctionsContainer.ScrollBarThickness = 4
    FunctionsContainer.ScrollBarImageColor3 = Colors.Accent
    FunctionsContainer.CanvasSize = UDim2.new(0, 0, 0, 0)
    FunctionsContainer.AutomaticCanvasSize = Enum.AutomaticSize.Y
    FunctionsContainer.Visible = false
    FunctionsContainer.Parent = rightPanelFunctionsContainer
    
    -- Layout –¥–ª—è —Ñ—É–Ω–∫—Ü–∏–π
    local FunctionsLayout = Instance.new("UIListLayout")
    FunctionsLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
    FunctionsLayout.VerticalAlignment = Enum.VerticalAlignment.Top
    FunctionsLayout.Padding = UDim.new(0, 8)
    FunctionsLayout.Parent = FunctionsContainer
    
    local FunctionsPadding = Instance.new("UIPadding")
    FunctionsPadding.PaddingTop = UDim.new(0, 10)
    FunctionsPadding.PaddingBottom = UDim.new(0, 10)
    FunctionsPadding.Parent = FunctionsContainer
    
    -- –ü—Ä–∏ –∫–ª–∏–∫–µ –Ω–∞ –≤–∫–ª–∞–¥–∫—É
    TabButton.MouseButton1Click:Connect(function()
        -- –°–∫—Ä—ã–≤–∞–µ–º –≤—Å–µ —Ñ—É–Ω–∫—Ü–∏–∏
        for _, child in pairs(rightPanelFunctionsContainer:GetChildren()) do
            if child:IsA("ScrollingFrame") then
                child.Visible = false
            end
        end
        
        -- –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Ñ—É–Ω–∫—Ü–∏–∏ –≤—ã–±—Ä–∞–Ω–Ω–æ–π –≤–∫–ª–∞–¥–∫–∏
        FunctionsContainer.Visible = true
        
        -- –û–±–Ω–æ–≤–ª—è–µ–º —Ü–≤–µ—Ç–∞ –∫–Ω–æ–ø–æ–∫
        for _, btn in pairs(TabsFrame:GetChildren()) do
            if btn:IsA("TextButton") then
                btn.BackgroundColor3 = Colors.Tertiary
                btn.TextColor3 = Colors.TextSecondary
            end
        end
        TabButton.BackgroundColor3 = Colors.Accent
        TabButton.TextColor3 = Colors.Text
    end)
    
    return FunctionsContainer
end

-- –§—É–Ω–∫—Ü–∏—è —Å–æ–∑–¥–∞–Ω–∏—è —Ç–µ–∫—Å—Ç–∞ —Å –∫–Ω–æ–ø–∫–æ–π ON/OFF
function GuiModule:CreateToggleFunction(parent, text, defaultState, callback)
    local FunctionFrame = Instance.new("Frame")
    FunctionFrame.Name = "ToggleFunction"
    FunctionFrame.Size = UDim2.new(1, -10, 0, 50)
    FunctionFrame.BackgroundColor3 = Colors.Tertiary
    FunctionFrame.BorderSizePixel = 0
    FunctionFrame.Parent = parent
    
    -- –°–∫—Ä—É–≥–ª–µ–Ω–∏–µ
    local FrameCorner = Instance.new("UICorner")
    FrameCorner.CornerRadius = Styles.SmallCorner
    FrameCorner.Parent = FunctionFrame
    
    -- –¢–µ–∫—Å—Ç
    local TextLabel = Instance.new("TextLabel")
    TextLabel.Name = "Text"
    TextLabel.Size = UDim2.new(1, -70, 1, 0)
    TextLabel.Position = UDim2.new(0, 10, 0, 0)
    TextLabel.BackgroundTransparency = 1
    TextLabel.Text = text
    TextLabel.TextColor3 = Colors.Text
    TextLabel.Font = Styles.Font
    TextLabel.TextSize = 14
    TextLabel.TextXAlignment = Enum.TextXAlignment.Left
    TextLabel.Parent = FunctionFrame
    
    -- –ö–Ω–æ–ø–∫–∞ Toggle
    local ToggleButton = Instance.new("TextButton")
    ToggleButton.Name = "Toggle"
    ToggleButton.Size = UDim2.new(0, 50, 0, 30)
    ToggleButton.Position = UDim2.new(1, -60, 0.5, -15)
    ToggleButton.BackgroundColor3 = defaultState and Colors.Success or Colors.Danger
    ToggleButton.BorderSizePixel = 0
    ToggleButton.Text = defaultState and "ON" or "OFF"
    ToggleButton.TextColor3 = Colors.Text
    ToggleButton.Font = Styles.SmallFont
    ToggleButton.TextSize = 12
    ToggleButton.Parent = FunctionFrame
    
    local ButtonCorner = Instance.new("UICorner")
    ButtonCorner.CornerRadius = UDim.new(0, 15)
    ButtonCorner.Parent = ToggleButton
    
    local state = defaultState or false
    
    ToggleButton.MouseButton1Click:Connect(function()
        state = not state
        ToggleButton.BackgroundColor3 = state and Colors.Success or Colors.Danger
        ToggleButton.Text = state and "ON" or "OFF"
        
        if callback then
            callback(state)
        end
    end)
    
    return FunctionFrame
end

-- –§—É–Ω–∫—Ü–∏—è —Å–æ–∑–¥–∞–Ω–∏—è –æ–±—ã—á–Ω–æ–π –∫–Ω–æ–ø–∫–∏
function GuiModule:CreateButtonFunction(parent, text, callback)
    local FunctionFrame = Instance.new("Frame")
    FunctionFrame.Name = "ButtonFunction"
    FunctionFrame.Size = UDim2.new(1, -10, 0, 50)
    FunctionFrame.BackgroundColor3 = Colors.Tertiary
    FunctionFrame.BorderSizePixel = 0
    FunctionFrame.Parent = parent
    
    -- –°–∫—Ä—É–≥–ª–µ–Ω–∏–µ
    local FrameCorner = Instance.new("UICorner")
    FrameCorner.CornerRadius = Styles.SmallCorner
    FrameCorner.Parent = FunctionFrame
    
    -- –¢–µ–∫—Å—Ç
    local TextLabel = Instance.new("TextLabel")
    TextLabel.Name = "Text"
    TextLabel.Size = UDim2.new(1, -70, 1, 0)
    TextLabel.Position = UDim2.new(0, 10, 0, 0)
    TextLabel.BackgroundTransparency = 1
    TextLabel.Text = text
    TextLabel.TextColor3 = Colors.Text
    TextLabel.Font = Styles.Font
    TextLabel.TextSize = 14
    TextLabel.TextXAlignment = Enum.TextXAlignment.Left
    TextLabel.Parent = FunctionFrame
    
    -- –ö–Ω–æ–ø–∫–∞
    local ActionButton = Instance.new("TextButton")
    ActionButton.Name = "Button"
    ActionButton.Size = UDim2.new(0, 50, 0, 30)
    ActionButton.Position = UDim2.new(1, -60, 0.5, -15)
    ActionButton.BackgroundColor3 = Colors.Accent
    ActionButton.BorderSizePixel = 0
    ActionButton.Text = "‚ñ∂"
    ActionButton.TextColor3 = Colors.Text
    ActionButton.Font = Styles.Font
    ActionButton.TextSize = 16
    ActionButton.Parent = FunctionFrame
    
    local ButtonCorner = Instance.new("UICorner")
    ButtonCorner.CornerRadius = UDim.new(0, 15)
    ButtonCorner.Parent = ActionButton
    
    -- –≠—Ñ—Ñ–µ–∫—Ç –ø—Ä–∏ –Ω–∞–≤–µ–¥–µ–Ω–∏–∏
    ActionButton.MouseEnter:Connect(function()
        ActionButton.BackgroundColor3 = Colors.AccentLight
    end)
    
    ActionButton.MouseLeave:Connect(function()
        ActionButton.BackgroundColor3 = Colors.Accent
    end)
    
    ActionButton.MouseButton1Click:Connect(function()
        if callback then
            callback()
        end
        
        -- –ê–Ω–∏–º–∞—Ü–∏—è –Ω–∞–∂–∞—Ç–∏—è
        ActionButton:TweenSize(UDim2.new(0, 45, 0, 25), "Out", "Quad", 0.1)
        task.wait(0.1)
        ActionButton:TweenSize(UDim2.new(0, 50, 0, 30), "Out", "Quad", 0.1)
    end)
    
    return FunctionFrame
end

-- –§—É–Ω–∫—Ü–∏—è —Å–æ–∑–¥–∞–Ω–∏—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–æ–Ω–Ω–æ–≥–æ —Ç–µ–∫—Å—Ç–∞
function GuiModule:CreateInfoLabel(parent, text)
    local FunctionFrame = Instance.new("Frame")
    FunctionFrame.Name = "InfoFunction"
    FunctionFrame.Size = UDim2.new(1, -10, 0, 40)
    FunctionFrame.BackgroundTransparency = 1
    FunctionFrame.Parent = parent
    
    local TextLabel = Instance.new("TextLabel")
    TextLabel.Size = UDim2.new(1, 0, 1, 0)
    TextLabel.BackgroundTransparency = 1
    TextLabel.Text = "‚ÑπÔ∏è " .. text
    TextLabel.TextColor3 = Colors.TextSecondary
    TextLabel.Font = Styles.SmallFont
    TextLabel.TextSize = 12
    TextLabel.TextWrapped = true
    TextLabel.Parent = FunctionFrame
    
    return FunctionFrame
end

-- –î–µ–º–æ-—Ñ—É–Ω–∫—Ü–∏—è (–ø—Ä–∏–º–µ—Ä –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è)
function GuiModule:Demo()
    local gui = self:CreateMainFrame(game:GetService("CoreGui"))
    
    -- –ü–æ–ª—É—á–∞–µ–º —Å—Å—ã–ª–∫–∏ –Ω–∞ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä—ã
    local leftPanel = gui.LeftPanel
    local rightPanel = gui.RightPanel
    
    -- –°–æ–∑–¥–∞–µ–º –≤–∫–ª–∞–¥–∫–∏ —Å –ø—Ä–∞–≤–∏–ª—å–Ω—ã–º–∏ –ø–∞—Ä–∞–º–µ—Ç—Ä–∞–º–∏
    local mainTab = self:CreateTab(leftPanel, "–û—Å–Ω–æ–≤–Ω—ã–µ", rightPanel.FunctionsContainer)
    local settingsTab = self:CreateTab(leftPanel, "–ù–∞—Å—Ç—Ä–æ–π–∫–∏", rightPanel.FunctionsContainer)
    local infoTab = self:CreateTab(leftPanel, "–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è", rightPanel.FunctionsContainer)
    
    -- –î–æ–±–∞–≤–ª—è–µ–º —Ñ—É–Ω–∫—Ü–∏–∏ –≤ –æ—Å–Ω–æ–≤–Ω—É—é –≤–∫–ª–∞–¥–∫—É
    self:CreateToggleFunction(mainTab, "–í–∫–ª—é—á–∏—Ç—å —É–≤–µ–¥–æ–º–ª–µ–Ω–∏—è", true, function(state)
        print("–£–≤–µ–¥–æ–º–ª–µ–Ω–∏—è:", state)
    end)
    
    self:CreateToggleFunction(mainTab, "–ê–≤—Ç–æ-–∑–∞–ø—É—Å–∫", false, function(state)
        print("–ê–≤—Ç–æ-–∑–∞–ø—É—Å–∫:", state)
    end)
    
    self:CreateButtonFunction(mainTab, "–í—ã–ø–æ–ª–Ω–∏—Ç—å –¥–µ–π—Å—Ç–≤–∏–µ", function()
        print("–î–µ–π—Å—Ç–≤–∏–µ –≤—ã–ø–æ–ª–Ω–µ–Ω–æ!")
    end)
    
    -- –î–æ–±–∞–≤–ª—è–µ–º —Ñ—É–Ω–∫—Ü–∏–∏ –≤ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏
    self:CreateToggleFunction(settingsTab, "–¢–µ–º–Ω–∞—è —Ç–µ–º–∞", true, function(state)
        print("–¢–µ–º–∞:", state and "—Ç–µ–º–Ω–∞—è" or "—Å–≤–µ—Ç–ª–∞—è")
    end)
    
    self:CreateToggleFunction(settingsTab, "–ó–≤—É–∫–∏", true, function(state)
        print("–ó–≤—É–∫–∏:", state)
    end)
    
    self:CreateButtonFunction(settingsTab, "–°–±—Ä–æ—Å–∏—Ç—å –Ω–∞—Å—Ç—Ä–æ–π–∫–∏", function()
        print("–ù–∞—Å—Ç—Ä–æ–π–∫–∏ —Å–±—Ä–æ—à–µ–Ω—ã!")
    end)
    
    -- –î–æ–±–∞–≤–ª—è–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é
    self:CreateInfoLabel(infoTab, "–í–µ—Ä—Å–∏—è 2.1 (–ò—Å–ø—Ä–∞–≤–ª–µ–Ω–Ω–∞—è)")
    self:CreateInfoLabel(infoTab, "–°–æ–∑–¥–∞–Ω–æ —Å –ª—é–±–æ–≤—å—é ‚ù§Ô∏è")
    
    -- –ê–∫—Ç–∏–≤–∏—Ä—É–µ–º –ø–µ—Ä–≤—É—é –≤–∫–ª–∞–¥–∫—É
    task.wait(0.1) -- –ù–µ–±–æ–ª—å—à–∞—è –∑–∞–¥–µ—Ä–∂–∫–∞ –¥–ª—è –≥–∞—Ä–∞–Ω—Ç–∏–∏
    local firstTab = leftPanel.TabsFrame:FindFirstChild("Tab_–û—Å–Ω–æ–≤–Ω—ã–µ")
    if firstTab then
        firstTab.MouseButton1Click:Fire()
    end
    
    return gui
end

return GuiModule
