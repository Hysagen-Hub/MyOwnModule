local UI_Module = {}
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local Players = game:GetService("Players")
local HttpService = game:GetService("HttpService")

_G.IsDraggingSlider = false

-- Файл для сохранения темы
local THEME_FILE = "hysagen_ui_theme.txt"

local function loadSavedTheme()
    local success, result = pcall(function()
        return HttpService:JSONDecode(readfile(THEME_FILE))
    end)
    if success and result and result.theme then
        return result.theme
    end
    return nil
end

local function saveTheme(themeName)
    local settings = {
        theme = themeName,
        savedAt = DateTime.now():ToIsoDate()
    }
    pcall(function()
        writefile(THEME_FILE, HttpService:JSONEncode(settings))
    end)
end

local function MakeDraggable(gui)
    local dragging, dragInput, dragStart, startPos
    local function updatePosition(input)
        local delta = input.Position - dragStart
        gui.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
    gui.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 and not _G.IsDraggingSlider then
            dragging = true
            dragStart = input.Position
            startPos = gui.Position
        end
    end)
    gui.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end
    end)
    UserInputService.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement and dragging then
            updatePosition(input)
        end
    end)
end

function UI_Module.CreateMain(hubTitle)
    local Library = { TabButtons = {}, Object = nil }
    local TabBase = {}
    TabBase.__index = TabBase
    
    local Themes = {
        ["Midnight"] = {
            Main = Color3.fromRGB(12, 12, 12), Sidebar = Color3.fromRGB(18, 18, 18), Stroke = Color3.fromRGB(35, 35, 35),
            Accent = Color3.fromRGB(255, 255, 255), Text = Color3.fromRGB(255, 255, 255), Secondary = Color3.fromRGB(25, 25, 25), BtnText = Color3.fromRGB(0, 0, 0)
        },
        ["Cyber Neon"] = {
            Main = Color3.fromRGB(20, 0, 30), Sidebar = Color3.fromRGB(35, 5, 50), Stroke = Color3.fromRGB(100, 0, 150),
            Accent = Color3.fromRGB(255, 0, 255), Text = Color3.fromRGB(240, 200, 255), Secondary = Color3.fromRGB(45, 10, 65), BtnText = Color3.fromRGB(255, 255, 255)
        },
        ["Gold Deluxe"] = {
            Main = Color3.fromRGB(15, 15, 10), Sidebar = Color3.fromRGB(25, 25, 15), Stroke = Color3.fromRGB(70, 60, 30),
            Accent = Color3.fromRGB(255, 215, 0), Text = Color3.fromRGB(255, 245, 200), Secondary = Color3.fromRGB(35, 35, 20), BtnText = Color3.fromRGB(50, 40, 0)
        }
    }
    
    local CurrentTheme = Themes["Midnight"]
    local savedThemeName = loadSavedTheme()
    if savedThemeName and Themes[savedThemeName] then CurrentTheme = Themes[savedThemeName] end
    
    local ScreenGui = Instance.new("ScreenGui", Players.LocalPlayer:WaitForChild("PlayerGui"))
    ScreenGui.Name = "Hysagen_UI_" .. math.random(100, 999)
    ScreenGui.ResetOnSpawn = false
    Library.Object = ScreenGui -- Ссылка для внешнего скрипта
    
    local Main = Instance.new("Frame", ScreenGui)
    Main.Name = "MainFrame"
    Main.Size = UDim2.new(0, 630, 0, 430)
    Main.Position = UDim2.new(0.5, -315, 0.5, -215)
    Main.BackgroundColor3 = CurrentTheme.Main
    Main.BorderSizePixel = 0
    Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 10)
    local MainStroke = Instance.new("UIStroke", Main)
    MainStroke.Thickness = 2
    MainStroke.Color = CurrentTheme.Stroke
    
    MakeDraggable(Main)

    local Sidebar = Instance.new("Frame", Main)
    Sidebar.Name = "Sidebar"
    Sidebar.Size = UDim2.new(0, 175, 1, 0)
    Sidebar.BackgroundColor3 = CurrentTheme.Sidebar
    Sidebar.BorderSizePixel = 0
    Instance.new("UICorner", Sidebar)

    local SidebarScroll = Instance.new("ScrollingFrame", Sidebar)
    SidebarScroll.Size = UDim2.new(1, -10, 1, -70)
    SidebarScroll.Position = UDim2.new(0, 5, 0, 65)
    SidebarScroll.BackgroundTransparency = 1
    SidebarScroll.ScrollBarThickness = 0
    Instance.new("UIListLayout", SidebarScroll).Padding = UDim.new(0, 5)

    local Title = Instance.new("TextLabel", Sidebar)
    Title.Size = UDim2.new(1, 0, 0, 60)
    Title.Text = hubTitle
    Title.TextColor3 = CurrentTheme.Text
    Title.Font = Enum.Font.GothamBold
    Title.TextSize = 18
    Title.BackgroundTransparency = 1

    local PagesFolder = Instance.new("Frame", Main)
    PagesFolder.Name = "Pages"
    PagesFolder.Size = UDim2.new(1, -195, 1, -20)
    PagesFolder.Position = UDim2.new(0, 185, 0, 10)
    PagesFolder.BackgroundTransparency = 1

    -- [ ФУНКЦИИ МОДУЛЯ ] --

    function TabBase:AddButtonRow(text, btnText, callback)
        self.Count = self.Count + 1
        local Row = Instance.new("Frame", self.Page)
        Row.Name = "Row"
        Row.Size = UDim2.new(1, -10, 0, 55)
        Row.BackgroundColor3 = CurrentTheme.Secondary
        Row.LayoutOrder = self.Count
        Instance.new("UICorner", Row)
        
        local L = Instance.new("TextLabel", Row)
        L.Size = UDim2.new(0.6, 0, 1, 0)
        L.Position = UDim2.new(0, 15, 0, 0)
        L.Text = text
        L.TextColor3 = CurrentTheme.Text
        L.Font = Enum.Font.GothamMedium
        L.TextSize = 16
        L.BackgroundTransparency = 1
        L.TextXAlignment = Enum.TextXAlignment.Left

        local B = Instance.new("TextButton", Row)
        B.Name = "ActionBtn"
        B.Size = UDim2.new(0.3, 0, 0, 38)
        B.Position = UDim2.new(0.65, 0, 0.5, -19)
        B.BackgroundColor3 = CurrentTheme.Accent
        B.Text = btnText
        B.TextColor3 = CurrentTheme.BtnText
        B.Font = Enum.Font.GothamBold
        B.TextSize = 16
        Instance.new("UICorner", B)
        B.MouseButton1Click:Connect(callback)
    end

    function TabBase:AddToggleButton(text, default, callback)
        self.Count = self.Count + 1
        local Toggled = default or false
        local CurrentBind = "NONE"
        local IsBinding = false
        
        local Row = Instance.new("Frame", self.Page)
        Row.Name = "Row"
        Row.Size = UDim2.new(1, -10, 0, 55)
        Row.BackgroundColor3 = CurrentTheme.Secondary
        Row.LayoutOrder = self.Count
        Instance.new("UICorner", Row)
        
        local L = Instance.new("TextLabel", Row)
        L.Size = UDim2.new(0.4, 0, 1, 0)
        L.Position = UDim2.new(0, 15, 0, 0)
        L.Text = text
        L.TextColor3 = CurrentTheme.Text
        L.Font = Enum.Font.GothamMedium
        L.TextSize = 15
        L.BackgroundTransparency = 1
        L.TextXAlignment = Enum.TextXAlignment.Left

        -- iPhone Switcher
        local ToggleBtn = Instance.new("TextButton", Row)
        ToggleBtn.Name = "ToggleBtnFrame"
        ToggleBtn.Size = UDim2.new(0, 55, 0, 28)
        ToggleBtn.Position = UDim2.new(0.45, 0, 0.5, -14)
        ToggleBtn.BackgroundColor3 = Toggled and Color3.fromRGB(50, 215, 75) or Color3.fromRGB(40, 40, 45)
        ToggleBtn.Text = ""
        Instance.new("UICorner", ToggleBtn).CornerRadius = UDim.new(1, 0)

        local Dot = Instance.new("Frame", ToggleBtn)
        Dot.Size = UDim2.new(0, 22, 0, 22)
        Dot.Position = Toggled and UDim2.new(1, -25, 0.5, -11) or UDim2.new(0, 3, 0.5, -11)
        Dot.BackgroundColor3 = Color3.new(1,1,1)
        Instance.new("UICorner", Dot).CornerRadius = UDim.new(1, 0)

        local function Toggle()
            Toggled = not Toggled
            local targetPos = Toggled and UDim2.new(1, -25, 0.5, -11) or UDim2.new(0, 3, 0.5, -11)
            local targetCol = Toggled and Color3.fromRGB(50, 215, 75) or Color3.fromRGB(40, 40, 45)
            TweenService:Create(Dot, TweenInfo.new(0.2), {Position = targetPos}):Play()
            TweenService:Create(ToggleBtn, TweenInfo.new(0.2), {BackgroundColor3 = targetCol}):Play()
            callback(Toggled)
        end
        ToggleBtn.MouseButton1Click:Connect(Toggle)

        -- Bind System
        local BindBtn = Instance.new("TextButton", Row)
        BindBtn.Size = UDim2.new(0, 80, 0, 30)
        BindBtn.Position = UDim2.new(1, -95, 0.5, -15)
        BindBtn.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
        BindBtn.Text = "NONE"
        BindBtn.TextColor3 = CurrentTheme.Text
        BindBtn.Font = Enum.Font.GothamBold
        BindBtn.TextSize = 12
        Instance.new("UICorner", BindBtn).CornerRadius = UDim.new(0, 6)
        local BStroke = Instance.new("UIStroke", BindBtn)
        BStroke.Color = CurrentTheme.Stroke

        BindBtn.MouseButton1Click:Connect(function()
            if IsBinding then return end
            IsBinding = true
            BindBtn.Text = "..."
            local conn
            conn = UserInputService.InputBegan:Connect(function(inp)
                if inp.UserInputType == Enum.UserInputType.Keyboard then
                    CurrentBind = inp.KeyCode.Name
                    BindBtn.Text = CurrentBind:upper()
                    IsBinding = false
                    conn:Disconnect()
                end
            end)
        end)

        UserInputService.InputBegan:Connect(function(inp, gpe)
            if not gpe and inp.KeyCode.Name == CurrentBind then Toggle() end
        end)
    end

    function TabBase:AddSlider(text, min, max, default, callback)
        self.Count = self.Count + 1
        local Row = Instance.new("Frame", self.Page)
        Row.Name = "Row"
        Row.Size = UDim2.new(1, -10, 0, 75)
        Row.BackgroundColor3 = CurrentTheme.Secondary
        Row.LayoutOrder = self.Count
        Instance.new("UICorner", Row)

        local T = Instance.new("TextLabel", Row)
        T.Size = UDim2.new(1, -20, 0, 30)
        T.Position = UDim2.new(0, 15, 0, 5)
        T.Text = text .. ": " .. default
        T.TextColor3 = CurrentTheme.Text
        T.Font = Enum.Font.GothamMedium
        T.BackgroundTransparency = 1
        T.TextXAlignment = Enum.TextXAlignment.Left

        local Bar = Instance.new("Frame", Row)
        Bar.Name = "SliderBack"
        Bar.Size = UDim2.new(1, -30, 0, 6)
        Bar.Position = UDim2.new(0, 15, 0, 50)
        Bar.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
        Instance.new("UICorner", Bar)

        local Fill = Instance.new("Frame", Bar)
        Fill.Name = "SliderFill"
        Fill.Size = UDim2.new((default-min)/(max-min), 0, 1, 0)
        Fill.BackgroundColor3 = CurrentTheme.Accent
        Instance.new("UICorner", Fill)

        local function Update(input)
            local per = math.clamp((input.Position.X - Bar.AbsolutePosition.X) / Bar.AbsoluteSize.X, 0, 1)
            local val = math.floor(min + (max - min) * per)
            Fill.Size = UDim2.new(per, 0, 1, 0)
            T.Text = text .. ": " .. val
            callback(val)
        end

        local drag = false
        Bar.InputBegan:Connect(function(i) if i.UserInputType == Enum.UserInputType.MouseButton1 then drag = true; _G.IsDraggingSlider = true; Update(i) end end)
        UserInputService.InputEnded:Connect(function(i) if i.UserInputType == Enum.UserInputType.MouseButton1 then drag = false; _G.IsDraggingSlider = false end end)
        UserInputService.InputChanged:Connect(function(i) if drag and i.UserInputType == Enum.UserInputType.MouseMovement then Update(i) end end)
    end

    function Library:CreateTab(name, isSettings)
        local NewTab = setmetatable({Count = 0}, TabBase)
        local TabBtn = Instance.new("TextButton", SidebarScroll)
        TabBtn.Size = UDim2.new(0.95, 0, 0, 38)
        TabBtn.BackgroundColor3 = CurrentTheme.Secondary
        TabBtn.Text = name
        TabBtn.TextColor3 = CurrentTheme.Text
        TabBtn.Font = Enum.Font.GothamBold
        Instance.new("UICorner", TabBtn)
        table.insert(Library.TabButtons, TabBtn)

        local Page = Instance.new("ScrollingFrame", PagesFolder)
        Page.Size = UDim2.new(1, 0, 1, 0)
        Page.BackgroundTransparency = 1
        Page.Visible = false
        Page.ScrollBarThickness = 0
        Instance.new("UIListLayout", Page).Padding = UDim.new(0, 10)
        NewTab.Page = Page

        TabBtn.MouseButton1Click:Connect(function()
            for _, p in pairs(PagesFolder:GetChildren()) do p.Visible = false end
            for _, b in pairs(Library.TabButtons) do b.BackgroundColor3 = CurrentTheme.Secondary end
            Page.Visible = true
            TabBtn.BackgroundColor3 = CurrentTheme.Accent
        end)

        if not isSettings and #Library.TabButtons == 1 then Page.Visible = true; TabBtn.BackgroundColor3 = CurrentTheme.Accent end
        return NewTab
    end

    return Library
end

return UI_Module
