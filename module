local module = {}

function module.CreateGui(parent)
	local gui = Instance.new("ScreenGui", parent)
	gui.Name = "MainGui"
	return gui
end

function module.createGlobalFrame(parent, sizexy, yesforcorner, cornerradius, isdraggable, sizeofbuttonsscrollingframeX)
	local frame = Instance.new("Frame", parent)
	frame.Name = "MainFrame"
	frame.Size = sizexy
	if yesforcorner == true then
		Instance.new("UICorner", frame).CornerRadius = cornerradius
	end
	if isdraggable == true then
		Instance.new("UIDragDetector", frame)
	end
	local buttonspageframe = Instance.new("ScrollingFrame", frame)
	buttonspageframe.Name = "buttonspageframe"
	buttonspageframe.Size = UDim2.new(sizeofbuttonsscrollingframeX, 0, 0.98, 0)
	buttonspageframe.Position = UDim2.new(sizeofbuttonsscrollingframeX/2, 0, 0.5, 0)
	buttonspageframe.AnchorPoint = Vector2.new(0.5, 0.5)
	buttonspageframe.BackgroundTransparency = 1
	Instance.new("UICorner", buttonspageframe).CornerRadius = cornerradius
	local functionsframe = Instance.new("ScrollingFrame", frame)
	functionsframe.Name = "functionsframe"
	functionsframe.Size = UDim2.new(1 - sizeofbuttonsscrollingframeX, 0, 0.98, 0)
	functionsframe.AnchorPoint = Vector2.new(0, 0.5)
	functionsframe.Position = UDim2.new(sizeofbuttonsscrollingframeX , 0, 0.5, 0)
	Instance.new("UICorner", functionsframe).CornerRadius = cornerradius
	return frame, buttonspageframe, functionsframe
end

function module.addbuttonpage(parent)
	local button = Instance.new("TextButton", parent)
	button.Size = UDim2.new(parent.Size.X, 0, 0.1, 0)
	button.Position = UDim2.new(0, 0, 0.1, 0)
end

return module
